---
import Layout from '../layouts/Main.astro';
import Button from '../components/Button.astro';
const title = "Startup with Markup";
---

<Layout title={title}>
  <main class="min-h-screen bg-gray-50 text-gray-800 dark:bg-gray-900 dark:text-gray-100">
    <div class="min-h-screen max-w-2xl mx-auto flex flex-col items-start justify-center">
      <div class="space-y-4">
        <h1 class:list={[
          "text-4xl",
          "font-extrabold",
          "tracking-tight",
          "sm:text-7xl",
          "xl:max-w-[43.5rem]"
          ]}>Startup with Markup</h1>

        <p class="font-bold text-2xl">Keep things simple. Optimise for learning.</p>
      </div>

      <Button class="mt-10" id="ping" variant="lg">Ping!</Button>
    </div>
  </main>
</Layout>

<script>
  const button = document.getElementById('ping');

  if (!button) {
    console.error('Element with ID "ping" not found in the DOM. Shucks!');
  } else {
    button.addEventListener('click', async () => {
      await fetch('/ping', {method: 'POST'}).then(async (response) => {
        const json = await response.json();
        console.log("Got a response from the server!", json);
      })
    })
  }
</script>
